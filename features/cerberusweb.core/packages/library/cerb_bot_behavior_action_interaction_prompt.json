{
  "package": {
    "name": "Bot Behavior Action: Prompt With Text",
    "revision": 1,
    "requires": {
      "cerb_version": "9.2.0",
      "plugins": [

      ]
    },
    "library": {
      "name": "Prompt with text",
      "uri": "cerb_bot_behavior_node_interaction_prompt_text",
      "description": "Prompt the worker to enter freeform text input",
      "point": "behavior_action:event.message.chat.worker",
      "image": ""
    },
    "configure": {
      "placeholders": [

      ],
      "prompts": [
        {
          "type": "chooser",
          "label": "Behavior",
          "key": "behavior_id",
          "hidden": true,
          "params": {
            "context": "cerberusweb.contexts.behavior",
            "single": true,
            "query": ""
          }
        },
        {
          "type": "text",
          "label": "Parent ID",
          "key": "parent_id",
          "hidden": true,
          "params": {
          }
        }
      ]
    }
  },
  "behavior_nodes": [
    {
      "uid": "node_prompt",
      "behavior_id": "{{{behavior_id}}}",
      "parent_id": "{{{parent_id}}}",
      "type": "action",
      "title": "Prompt:",
      "status": "live",
      "params": {
        "actions": [
          {
            "action": "send_message",
            "message": "What is the answer to my question?",
            "format": "",
            "delay_ms": "1000"
          },
          {
            "action": "prompt_text",
            "placeholder": "",
            "default": "",
            "mode": "",
            "var": "prompt_answer",
            "var_format": "{{message}}",
            "var_validate": "{% if message is empty %}\r\nYou must type something!\r\n{% endif %}"
          }
        ]
      }
    }
  ]
}